@inject IService service

<EditForm Model="AjusteVM" OnValidSubmit="ValidarFormulario">
    <DataAnnotationsValidator />
    <div class="form-row">
        <div class="form-group col-sm-6 col-md-4 col-lg-3">
            <label for="txtNFactura">Numero Ref:</label>
            <div class="input-group mb-3">
                <InputNumber @bind-Value="AjusteVM.NumeroRefencia" class="form-control" disabled />
            </div>
        </div>

        <div class="form-group col-sm-6 col-md-4 col-lg-3">
            <label for="txtNFactura">Fecha:</label>
            <div class="input-group mb-3">
                <InputDate class="form-control" disabled @bind-Value="AjusteVM.FechaCreacion" id="dtfecha" />
            </div>
        </div>

        <div class="form-group col-sm-6 col-md-4 col-lg-3">
            <label>Ajuste entrada:</label>
            <div class="input-group mb-3">
                <InputCheckbox @bind-Value="AjusteVM.EsAjusteEntrada" disabled="@DisabledFormulario" class="ml-3"  />
            </div>
        </div>
    </div>
</EditForm>

@code {
    [Parameter]
    public AjusteViewModel AjusteVM { get; set; }

    [Parameter]
    public EventCallback AbrirFomulario { get; set; }

    [Parameter]
    public bool DisabledFormulario { get; set; }

    protected void ValidarFormulario()
    {

    }

}
