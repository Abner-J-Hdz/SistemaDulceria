@inject IService serviceProveedor
@inject NavigationManager navigate
@inject IJSRuntime js

<EditForm Model="ClienteVM" OnValidSubmit="GuardarActualizarProveedor">
    <DataAnnotationsValidator />
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label>Nombre:</label>
                <InputText id="txtNombre" @bind-Value="ClienteVM.Nombre" autofocus class="form-control" />
                <ValidationMessage For="() => ClienteVM.Nombre" />
            </div>
        </div>

        <div class="col">
            <div class="form-group">
                <label>Correo:</label>
                <InputText @bind-Value="ClienteVM.Correo" type="email" class="form-control" />
                <ValidationMessage For="() => ClienteVM.Correo" />
                <small id="emailHelp" class="form-text text-muted"></small>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="form-group">
                <label>Telefono1:</label>
                <input type="tel" @bind-value="ClienteVM.Telefono1" class="form-control">

            </div>
        </div>

        <div class="col">
            <div class="form-group">
                <label>Telefono2:</label>
                <input type="tel" @bind-value="ClienteVM.Telefono2" class="form-control">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label>Direccion:</label>
                <InputTextArea @bind-Value="ClienteVM.Direccion" class="form-control" />
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-outline-danger" @onclick="CerraModal"><i class="bi bi-x-circle mr-1"></i>  Cerrar</button>
        <button type="submit" class="btn btn-outline-primary"><i class="bi bi-save mt-1"></i>  @LabelButton</button>
    </div>
</EditForm>


@code {
    [Parameter]
    public ClientesViewModel ClienteVM { get; set; }

    [Parameter]
    public EventCallback CerraModal { get; set; }

    [Parameter]
    public EventCallback RecargarListado { get; set; }

    string LabelButton = "";

    public Response respuesta { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (ClienteVM.IdCliente == 0)
            LabelButton = "Guardar";
        else
            LabelButton = "Actualizar";

        await js.InvokeVoidAsync("focusElementById", "txtNombre");
    }

    protected async Task GuardarActualizarProveedor()
    {
        if (ClienteVM.IdCliente == 0)
            respuesta = await serviceProveedor.GuardarClientes(ClienteVM);
        else
            respuesta = await serviceProveedor.ActualizarClientes(ClienteVM);

        if (respuesta.Ok)
        {
            await js.InvokeVoidAsync("showAlert", "success", respuesta.Message, "");
            await Task.Delay(1600).ContinueWith((task) =>
            {
                navigate.NavigateTo("Clientes", forceLoad: true);
            });
            await CerraModal.InvokeAsync(true);
        }
        else
        {
            ///error de 
            await CerraModal.InvokeAsync(true);
        }
    }
}
