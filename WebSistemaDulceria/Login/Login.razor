@page "/login"
@page "/login/{ErrorMessage}"
@inject NavigationManager NavManager
@attribute [AllowAnonymous]

<div class="row" style="background-color: #0f0e1596; height: 100vh">
    <br />

    <div class="col-md-3 col-sm-6 ml-auto mt-5 mr-auto pb-5 backgroundLogin rounded" style="height: 450px">
        <br />
        <br />
        <h2 class="text-white text-center">Dulceria Yohany</h2>
        <br />
        <br />

        <form action="/account/login" method="post">

            @if (ErrorMessage != null)
            {
                <div class="text-danger">@ErrorMessage</div>
            }

            <!-- Email input -->
            <div class="form-outline mb-4">
                <label class="form-label text-white" for="form2Example1">Correo:</label>
                <input name="email" type="email" required id="form2Example1" class="form-control" />
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
                <label class="form-label text-white" for="form2Example2">Contraseña:</label>
                <input name="password" type="password" required id="form2Example2" class="form-control" />
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Iniciar sesion</button>
        </form>
    </div>
</div>

@code {
    [Parameter] public string ErrorMessage { get; set; }

}
